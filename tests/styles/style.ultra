include "styles/properties.ultra"

gray = '#dedede'
blue = '#20F'

rules = [
    ['.article', [
        bg(gray), color(blue), padding(6), margin(3)
        ]
    ],
    ['.text', [
        bg(blue), color(gray), padding(9)
    ]]
]

function styleSheet(rules)
    for (rules, r)
        live rule(r[0], r[1])
    end
    return $LIVE
end